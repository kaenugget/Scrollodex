{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/db/**/*", "src/mcp/**/*", "src/agents/**/*", "src/workflows/**/*", "src/utils/**/*", "src/server.ts", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "old", "src/app/**/*", "src/components/**/*", "src/hooks/**/*", "src/lib/**/*"],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
